	<packaging>war</packaging>
	<name>metadataapi</name>
	

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven.compiler.source>1.7</maven.compiler.source>
		<maven.compiler.target>1.7</maven.compiler.target>
	</properties>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<webXml>${webXmlPath}/web.xml</webXml>
					<warName>${project.artifactId}</warName>
					<webResources>
						<resource>
							<directory>${project.build.directory}/generated-sources</directory>
							<includes>
								<include>**/*.html</include>
							</includes>
						</resource>
					</webResources>
				</configuration>
			</plugin>

			<plugin>
				<groupId>io.swagger</groupId>
				<artifactId>swagger-codegen-maven-plugin</artifactId>
				<version>2.2.2 </version>
				<executions>
					<execution>
						<id>api-v01</id>
						<goals>
							<goal>generate</goal>
						</goals>
						<configuration>
							<inputSpec>${project.basedir}/src/main/swagger/v01/yaml/swagger.yaml</inputSpec>
							<language>html2</language>
							<output>${project.build.directory}/generated-sources/docs/api/v01</output>
							<configOptions>
								<!-- <sourceFolder>src/gen/html2/main</sourceFolder> -->
							</configOptions>
						</configuration>
					</execution>
					<execution>
						<id>api-v02</id>
						<goals>
							<goal>generate</goal>
						</goals>
						<configuration>
							<inputSpec>${project.basedir}/src/main/swagger/v02/yaml/${swaggerYaml}.yaml</inputSpec>
							<language>html2</language>
							<output>${project.build.directory}/generated-sources/docs/api/v02</output>
							<configOptions>
							</configOptions>
						</configuration>
					</execution>

				</executions>
			</plugin>
			<plugin>
				<groupId>com.google.code.maven-replacer-plugin</groupId>
				<artifactId>replacer</artifactId>
				<version>1.5.3</version>
				<executions>
					<execution>
						<phase>prepare-package</phase>
						<goals>
							<goal>replace</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<basedir>${project.build.directory}/generated-sources/docs/api/</basedir>
					<includes>
						<include>v01/index.html</include>
						<include>v02/index.html</include>
					</includes>
					<replacements>
						<replacement>
							<token>&lt;/head&gt;</token>
							<value>&lt;link
								rel="shortcut icon"
								href="/metadataapi/favicon.png"&gt;&lt;link
								rel="stylesheet"
								type="text/css"
								href="${swaggerCssPath}"&gt;&lt;/head&gt;</value>
						</replacement>
					</replacements>
				</configuration>
			</plugin>
		</plugins>
	</build>
		
